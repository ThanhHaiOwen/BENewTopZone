@model BENewTopZone.Models.ProDetail

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CHI TIẾT SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @* NHÓM 1 *@
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="control-label col-md-4">TÊN SẢN PHẨM </div>
                    <div class="col-md-8">
                        @Html.DropDownList("ProID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ProID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="control-label col-md-4">MÀU SẢN PHẨM</div>
                <div class="col-md-8">
                    @*@Html.DropDownList("ColorID", null, htmlAttributes: new { @class = "form-control" })*@
                    @*@Html.ListBoxFor(model => model.ColorID, ViewBag.ColorList as MultiSelectList, new { @class = "form-control", @maxlength = "1" })*@
                    @Html.DropDownList("ColorID", null, htmlAttributes: new { @class = "form-control " })

                    @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <BR />
        @* nHÓM 2 *@
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="control-label col-md-4">GIÁ </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="control-label col-md-4">MÃ GIẢM GIÁ</div>
                <div class="col-md-8">
                    @Html.DropDownList("DiscountID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DiscountID, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <BR />
        @* nHÓM 3 *@
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="control-label col-md-4">DUNG LƯỢNG </div>
                    <div class="col-md-8">
                        @Html.DropDownList("CapacityID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CapacityID, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="control-label col-md-4">SẢN PHẨM CÒN</div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.RemainQuantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RemainQuantity, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <BR />
        @* nHÓM 4 *@
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <div class="control-label col-md-6">SẢN PHẨM ĐÃ BÁN </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.SoldQuantity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoldQuantity, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="control-label col-md-4">SỐ LƯỢT XEM</div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ViewQuantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ViewQuantity, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>





        <BR />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                @Html.ActionLink("Danh sách", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>

}

