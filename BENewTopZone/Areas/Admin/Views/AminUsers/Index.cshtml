@model IEnumerable<BENewTopZone.Models.AminUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TÀI KHOẢNG ADMIN</h2>


<table class="table table-striped">
    <tr  style="background-color: aqua">
        <th>
            @Html.DisplayNameFor(model => model.NameUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PasswordUser)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PasswordUser)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ID }, new { @class = "btn btn-sm btn-success" }) |
           
            @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Tạo mới", "RegisterUser", "LoginUser",null, new { @class = "btn btn-sm btn-primary" })
</p>