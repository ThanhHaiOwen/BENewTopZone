@model IEnumerable<BENewTopZone.Models.Discount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DANH SÁCH MÃ GIẢM GIÁ</h2>


<table class="table table-striped">
    <tr style="background-color: aqua">
        <th>
            MÃ GIẢM GIÁ
        </th>
        <th>
            SỐ TIỀN GIẢM GIÁ
        </th>
        <th>
            NGÀY MỞ MÃ
        </th>
        <th>
            NGÀY KẾT THÚC MÃ
        </th>
        <th>
            THAO TÁC
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.DiscountID }, new { @class = "btn btn-info" }) |
                @*@Html.ActionLink("Chi Tiết", "Details", new { id = item.DiscountID }, new { @class = "btn btn-success" }) |*@
                @Html.ActionLink("Xóa", "Delete", new { id = item.DiscountID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>