@model BENewTopZone.Models.AminUser

@{
    ViewBag.Title = "RegisterUser";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Đăng Ký</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("RegisterUser", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "ID đã tồn tại", new { @class = "text-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(model => model.ID, new { @class = "form-label" })
                            @Html.EditorFor(model => model.ID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.NameUser, new { @class = "form-label" })
                            @Html.EditorFor(model => model.NameUser, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.RoleUser, new { @class = "form-label" })
                            @Html.EditorFor(model => model.RoleUser, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RoleUser, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.PasswordUser, new { @class = "form-label" })
                            @Html.PasswordFor(model => model.PasswordUser, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.ConfirmPass, new { @class = "form-label" })
                            @Html.PasswordFor(model => model.ConfirmPass, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPass, "", new { @class = "field-validation-error" })
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Đăng Ký</button>
                        </div>
                    }
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a href="@Url.Action("Index", "LoginUser", new { area = "Admin" })">Đã có tài khoản? Đăng nhập ngay!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>